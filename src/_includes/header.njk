<!-- Header Start -->
<header>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <!-- header Nav Start -->
        <div class="navbar navbar-default">
          <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" aria-expanded="false" data-toggle="collapse" data-target="#fevr-menu">
                <span class="sr-only">Mostra / Nascondi la navigazione</span>
                <span aria-hidden="true" class="icon-bar"></span>
                <span aria-hidden="true" class="icon-bar"></span>
                <span aria-hidden="true" class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="/" aria-label="Vai alla Homepage">
                <img src="/img/logo-fevr.png" alt="">
              </a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <nav class="collapse navbar-collapse" id="fevr-menu">
              <p class="sr-only">Navigazione del sito</p>
              <ul class="nav navbar-nav navbar-right">
                {% for item in nav %}
                  <li>
                    <a 
                      {{ ('aria-current="page"' | safe) if item.href == page.url }} 
                      href="{{ item.href }}"
                    >{{ item.label }}</a>
                  </li>
                {% endfor %}
                <li>
                  <a aria-label="Feed RSS" href="/feed.xml" target="_blank">
                    <span aria-hidden="true" class="fa fa-rss" style="color: #f26522"></span>
                  </a>
                </li>
              </ul>
            </nav>
            <!-- /.navbar-collapse -->
          </div>
          <!-- /.container-fluid -->
        </div>
      </div>
    </div>
  </div>
</header>
<!-- header close -->